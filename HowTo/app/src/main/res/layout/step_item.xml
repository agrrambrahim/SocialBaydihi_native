<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linearLayout_step_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">
    <android.support.v7.widget.CardView
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_view_pos_step_item"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="1"
                    android:background="@color/colorPrimaryDark"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView

                    android:id="@+id/text_view_title_step_item"
                    android:background="@drawable/border_line_buttom"
                    android:layout_marginLeft="50dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="center|left"
                    android:lines="2"
                    android:paddingLeft="10dp"
                    android:text="ferb erger ergre regregreger regregre rgregergregregregreerg regergregregrger regregre"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
            </RelativeLayout>
            <ImageView
                android:id="@+id/image_view_img_step_item"
                android:visibility="visible"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/image_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 />
            <WebView
                android:id="@+id/web_view_content_step_item"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></WebView>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>